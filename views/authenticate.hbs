<div class="container container-table">
    <div class="row vertical-center-row">
        <div class="col-md-6 offset-md-3">
            <form method="POST">
                <div class="form-group">
                    <label for="email">
                        Email
                        <span class="text-danger">*</span>
                    </label>
                    <input name="email"
                        id="email"
                        type="text"
                        class="form-control">
                </div>
                <div class="form-group">
                    <label for="password">
                        Password
                        <span class="text-danger">*</span>
                    </label>
                    <input name="password"
                    id="password"
                    type="password"
                    class="form-control">
                </div>
                <button class="btn btn-primary">
                    Login
                </button>
            </form>
        </div>
    </div>
</div>